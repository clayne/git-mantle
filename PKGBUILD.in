# Maintainer: Roman Neuhauser <neuhauser+git-mantle@sigpipe.cz>
pkgname=git-mantle
pkgver=__VERSION__
_upstreamver=__VERSION__
pkgrel=1
pkgdesc="Generate an overview of changes on a branch"
arch=(any)
url="https://github.com/roman-neuhauser/$pkgname"
license=(MIT)
depends=(git zsh)
source=($pkgname-$_upstreamver.tar.gz)
sha1sums=(SKIP)

build() {
  _make
}

package() {
  _make install DESTDIR="$pkgdir/"
}

_make() {
  cd "$srcdir/$pkgname-$_upstreamver"
  make "$@"
}

